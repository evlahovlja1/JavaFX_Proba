<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <Label text="Korisnicko ime:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="username" />

    <Label text="Sifra:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Button id="prijavaBtn" alignment="BOTTOM_LEFT" text="Login" GridPane.columnIndex="0" GridPane.columnSpan="2"
            GridPane.rowIndex="2" maxWidth="Infinity" onAction="#loginClick"/>

    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
</GridPane>
